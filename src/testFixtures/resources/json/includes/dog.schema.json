{
  "$id": "https://example.com/dog.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dog",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The dog's first name."
    },
    "breed": {
      "type": "string",
      "description": "The dog's last name."
    },
    "isAwesome": {
      "type": "boolean",
      "description": "The dog's awesome.",
      "default": true
    },
    "age": {
      "description": "Age in years which must be equal to or greater than zero.",
      "type": ["integer", "null"],
      "minimum": 0
    }
  }
}